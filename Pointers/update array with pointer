
void update_array(int *add,int b,int size) {
	
	for (int i = 0; i < size; i++) {
		//cout << i << endl;
		*(add + i) =*(add + i)+b;
		
	}

}

int main() {
	int arr[5] = {1,2,3,4,6};
	int b = 5;
	int size = 5;
	update_array(arr, b, size);
	for (int i = 0; i < size; i++) {
		cout << arr[i] << endl;
	}
	//cout << "a:" << a << "  b:" << b;
}
